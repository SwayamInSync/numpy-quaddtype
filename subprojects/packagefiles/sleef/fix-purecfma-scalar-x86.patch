-set(COMPILER_SUPPORTS_PURECFMA_SCALAR 1)
+# Disable PURECFMA_SCALAR on x86 to maintain x86-64-v2 compatibility
+# PURECFMA requires FMA instructions which are only available in x86-64-v3 (Haswell+)
+# This allows numpy-quaddtype to work on Sandy Bridge and similar older CPUs
+if(NOT SLEEF_ARCH_X86)
+  set(COMPILER_SUPPORTS_PURECFMA_SCALAR 1)
+endif()
 
